<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.completion.CompletionActivity">

    <ImageView
        android:id="@+id/img_completion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/img_completion"
        app:layout_constraintBottom_toTopOf="@+id/tv_completion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_completion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/completion_title"
        android:textAlignment="center"
        android:textColor="@color/goldYellow"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_completion" />

    <ImageView
        android:id="@+id/img_placeholderXp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/cd_totalXp"
        android:src="@drawable/xp_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_completion"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/tv_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/goldYellow"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/img_placeholderXp"
        app:layout_constraintEnd_toEndOf="@id/img_placeholderXp"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="@id/img_placeholderXp"
        app:layout_constraintTop_toTopOf="@id/img_placeholderXp"
        app:layout_constraintVertical_bias="0.684"
        tools:text="10" />

    <Button
        android:id="@+id/btn_completion"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_button"
        android:text="Lanjutkan"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_placeholderXp" />

</androidx.constraintlayout.widget.ConstraintLayout>